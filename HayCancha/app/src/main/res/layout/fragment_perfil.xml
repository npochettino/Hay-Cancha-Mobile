<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/remera_perfil" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <sempait.haycancha.widgets.HelveticaNeueLightEditText
                android:id="@+id/exp_name_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:editable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:text="Diguilio"
                android:textColor="@color/green_dark" />


            <sempait.haycancha.widgets.HelveticaNeueLightEditText
                android:id="@+id/exp_last_name_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:editable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:text="Martin"
                android:textColor="@color/green_dark" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"

            android:paddingLeft="20dp">

            <sempait.haycancha.widgets.HelveticaNeueLightTextView
                android:id="@+id/txt_disponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Disponible"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <sempait.haycancha.widgets.HelveticaNeueLightTextView
                android:id="@+id/txt_desc_disponible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/txt_desc_disponible"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />


        </LinearLayout>

        <Switch
            android:id="@+id/sw_activo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:paddingRight="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <sempait.haycancha.widgets.HelveticaNeueLightTextView
                android:id="@+id/txt_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Delantero"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <sempait.haycancha.widgets.HelveticaNeueLightTextView
                android:id="@+id/txt_desc_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/txt_desc_position"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_arquero"
                android:layout_width="55dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/arquero_desactivado" />

            <ImageView
                android:id="@+id/img_defensor"
                android:layout_width="55dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/defensa_desactivado" />


            <ImageView
                android:id="@+id/img_delantero"
                android:layout_width="55dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/delantero_activo" />


            <ImageView
                android:id="@+id/img_todo_el_campo"
                android:layout_width="55dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/todo_campo_desactivado" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <sempait.haycancha.widgets.HelveticaNeueLightEditText
            android:id="@+id/exp_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:editable="true"
            android:focusable="true"

            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="martindiguilio@hotmail.com"
            android:textColor="@color/green_dark" />


        <sempait.haycancha.widgets.HelveticaNeueLightEditText
            android:id="@+id/exp_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:editable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/green_dark" />


        <sempait.haycancha.widgets.HelveticaNeueLightEditText
            android:id="@+id/exp_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:editable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="@color/green_dark" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_hay_cancha"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@drawable/hay_cancha_marca_agua" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:text="@string/update"
            android:textColor="@color/green"
            android:textSize="16sp" />


        <sempait.haycancha.widgets.HelveticaNeueLightTextView
            android:id="@+id/txt_cerrar_sesion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:text="@string/txt_close_sesion"
            android:textColor="@color/green_dark"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>